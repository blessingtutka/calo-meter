{
    "expo": {
        "name": "caloMeter",
        "slug": "calo-meter",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/images/logo.png",
        "scheme": "calometer",
        "userInterfaceStyle": "automatic",
        "newArchEnabled": true,
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.blessingtutka.calometer",
            "infoPlist": {
                "ITSAppUsesNonExemptEncryption": false,
                "NSCameraUsageDescription": "This app uses the camera to take photos of your meals for food recognition and nutritional analysis.",
                "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select meal images for analysis."
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/images/logo.png",
                "backgroundColor": "#000000"
            },
            "edgeToEdgeEnabled": true,
            "package": "com.blessingtutka.calometer",
            "permissions": ["android.permission.CAMERA", "android.permission.READ_EXTERNAL_STORAGE"]
        },
        "web": {
            "bundler": "metro",
            "output": "static",
            "favicon": "./assets/images/logo.png"
        },
        "plugins": [
            "expo-router",
            "expo-web-browser",
            [
                "expo-splash-screen",
                {
                    "image": "./assets/images/logo.png",
                    "imageWidth": 200,
                    "resizeMode": "contain",
                    "backgroundColor": "#000000"
                }
            ],
            "expo-font",
            [
                "expo-camera",
                {
                    "cameraPermission": "Allow Meal Snap to access your camera to take photos of your meals."
                }
            ],
            [
                "expo-image-picker",
                {
                    "photosPermission": "Allow Meal Snap to access your photos to analyze meal images."
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true
        },
        "extra": {
            "router": {},
            "eas": {
                "projectId": "8329f4ae-2255-451b-84f8-4ee53ab98fbd"
            }
        },
        "runtimeVersion": {
            "policy": "appVersion"
        },
        "updates": {
            "url": "https://u.expo.dev/8329f4ae-2255-451b-84f8-4ee53ab98fbd"
        }
    }
}
